{
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(chmod:*)",
      "Bash(cp:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(npm:*)",
      "Bash(touch:*)",
      "Bash(uv:*)",
      "Edit",
      "Write"
    ],
    "deny": []
  },
  "statusLine": {
    "type": "command",
    "command": "bunx ccstatusline@latest",
    "padding": 0
  },
  "enabledPlugins": {
    "ai-sdk@claude-craftkit": true,
    "architecture-design@claude-craftkit": true,
    "audio-notifications@claude-craftkit": true,
    "db-tools@claude-craftkit": true,
    "git@claude-craftkit": true,
    "quality@claude-craftkit": true,
    "reviewer@claude-craftkit": true,
    "ui-tests@claude-craftkit": true,
    "ui@claude-craftkit": true,
    "superpowers@superpowers-marketplace": true
  }
}
