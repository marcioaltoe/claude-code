{
  "name": "product-engineering",
  "version": "1.0.0",
  "description": "Complete workflow from idea to implementation: Discovery → Spec → Design → Plan → Validate",
  "author": "Claude Craftkit",
  "license": "MIT",
  "keywords": [
    "product-engineering",
    "discovery",
    "specification",
    "technical-design",
    "implementation-planning",
    "architecture-decision-records",
    "prd",
    "requirements-engineering"
  ],
  "commands": [
    "discover",
    "specify",
    "design",
    "plan",
    "validate"
  ],
  "skills": [
    "idea-refinement",
    "requirements-elicitation",
    "spec-writing",
    "architecture-decision",
    "technical-design",
    "task-breakdown"
  ],
  "agents": [
    "discovery-facilitator",
    "requirements-engineer",
    "solutions-architect",
    "task-planner",
    "implementation-validator"
  ],
  "dependencies": {
    "superpowers": "^1.0.0"
  },
  "integrations": {
    "mcp": {
      "context7": "Documentation research for frameworks and libraries",
      "perplexity": "Market research, best practices, architectural patterns",
      "octocode": "Reference implementations from GitHub repositories"
    }
  },
  "workflow": {
    "phases": [
      {
        "name": "Discovery",
        "command": "/product-engineering:discover",
        "input": "Rough idea description",
        "output": "docs/discovery/DISC-{###}-{name}.md",
        "mcp": ["perplexity", "context7", "octocode"]
      },
      {
        "name": "Specification",
        "command": "/product-engineering:specify",
        "input": "Discovery document",
        "output": "docs/specs/SPEC-{###}-{name}.md + branch",
        "mcp": ["context7", "perplexity"]
      },
      {
        "name": "Design",
        "command": "/product-engineering:design",
        "input": "Spec document",
        "output": "docs/design/DESIGN-{###}-{name}.md + ADRs",
        "mcp": ["context7", "perplexity", "octocode"]
      },
      {
        "name": "Planning",
        "command": "/product-engineering:plan",
        "input": "Design document + ADRs",
        "output": "docs/plans/PLAN-{###}-{name}.md + docs/tasks/TASKS-{###}-{name}.md",
        "mcp": []
      },
      {
        "name": "Validation",
        "command": "/product-engineering:validate",
        "input": "Spec + Design + Implementation",
        "output": "Validation report",
        "mcp": []
      }
    ]
  }
}
